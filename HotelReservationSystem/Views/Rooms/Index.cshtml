@model IEnumerable<HotelReservationSystem.Models.Room>

@{
    ViewBag.Title = "Index";
}


<h3 class="page-header">Rooms</h3>

<div>
    @Html.ActionLink("New Room", "Create", "Rooms", null, new { @class = "btn btn-primary" })
</div>
<br />

@using (Html.BeginForm())
{
    <div class="form-horizontal">


        <div class="form-group">
            @Html.Label("HotelId", "Hotel", htmlAttributes: new { @class = "control-label col-md-2" })
            <div class="col-md-10">
                @Html.DropDownList("HotelId", null, "", htmlAttributes: new { @class = "form-control inlineDisplay" })
                <input type="submit" value="Search" class="btn btn-primary" />
            </div>
        </div>
    </div>
}

<br />


<table class="table">
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.Name)
        </th>

        <th>
            Hotel
        </th>

        <th>
            @Html.DisplayNameFor(model => model.Description)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.BedsCount)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.PricePerNight)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.IsInactive)
        </th>
        <th></th>
    </tr>

    @foreach (var item in Model)
    {
        <tr>
            <td>
                @Html.ActionLink(item.Name, "Edit", new { id = item.Id })
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Hotel.Name)
            </td>

            <td>
                @Html.DisplayFor(modelItem => item.Description)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.BedsCount)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.PricePerNight)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.IsInactive)
            </td>
            <td>
                @Html.ActionLink("Details", "Details", new { id = item.Id }) |
                @Html.ActionLink("Delete", "Delete", new { id = item.Id })
            </td>
        </tr>
    }

</table>
